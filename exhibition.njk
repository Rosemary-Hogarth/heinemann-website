---
layout: base.njk
pagination:
  data: exhibitions
  size: 1
  alias: exhibition
permalink: "exhibitions/{{ exhibition.title | slug }}/"
---
<h1>{{ exhibition.title }}</h1>
<p>{{ exhibition.location }}</p>
 <p>{{ exhibition.year }}</p>

<div class="carousel-container">
  <div class="carousel">
    {% for image in exhibition.images %}
    <div class="carousel-item">
      <img src="{{ image }}" class="img-fluid" alt="Image from {{ exhibition.title }}">
      </div>
    {% endfor %}
  </div>
  <button class="carousel-prev" aria-label="Previous image">&lt;</button>
  <button class="carousel-next" aria-label="Next image">&gt;</button>
</div>
